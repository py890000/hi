<%= form_for(resource, :as => resource_name, :url => session_path(resource_name),
             :html => {:class => "form-horizontal"}) do |f| %>
    <fieldset>
      <legend>longin</legend>

      <div class="control-group"><%= f.label :email, '帐号:', :class => 'control-label' %>
        <div class="controls"><%= f.email_field :email, :class => 'input-xlarge' %></div>
      </div>

      <div class="control-group"><%= f.label :password, '密码', :class => 'control-label' %>
        <div class="controls"><%= f.password_field :password, :class => 'input-xlarge' %></div>
      </div>

      <% if devise_mapping.rememberable? -%>
          <div class="control-group"><%= f.check_box :remember_me, :class => 'control-label' %>
            <div class="controls"><%= f.label :remember_me, '记住我', :class => 'input-xlarge' %></div>
          </div>
      <% end -%>

      <div class="form-actions" ><%= f.submit "提交" %></div>
    </fieldset>
<% end %>

<%= render "links" %>
