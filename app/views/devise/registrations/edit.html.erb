<h2>修改 <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email,'帐号' %><br />
  <%= f.email_field :email %></div>

  <div><%= f.label :password,'新密码' %> <i>(如果你不想改变密码，就不需要输入)</i><br />
  <%= f.password_field :password, :autocomplete => "off" %></div>

  <div><%= f.label :password_confirmation ,'确认新密码'%><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.label :current_password ,'旧密码'%> <i>(我们需要您的当前密码以确认您的更改)</i><br />
  <%= f.password_field :current_password %></div>

  <div><%= f.submit "保存" %></div>
<% end %>

<h3>取消我的帐号 </h3>

<p>不开心吗? <%= link_to "删除我的帐号", registration_path(resource_name), :confirm => "你确定吗", :method => :delete %>.</p>

<%= link_to "Back", :back %>
